<div data-section-id="{{ section.id }}" data-section-type="header">
  <header role="banner">
    {% assign ll = linklists[section.settings.main_menu] %}
    {% if ll and ll.links.size > 0 %}
      <nav class="header-nav">
        <ul>
          {% for link in ll.links %}
            <li>
              <a href="{{ link.url }}">{{ link.title | prepend: '/' }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}

    <a href="/" itemprop="url" title="{{ shop.name }}">
      {% include 'header-logo' %}
    </a>

    <a
      href="/cart"
      class="header-cart btn {% if cart.item_count > 0 %} has-items{% endif %}"
      data-ajax-cart-trigger
    >
        Cart <span data-cart-count>{{ cart.item_count }}</span>
    </a>
  </header>
</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main Menu"
      }
    ]
  }
{% endschema %}
