<div class="password-page" data-section-id="{{ section.id }}" data-section-type="password">   
  <div class="container-fluid">
    <div class="row">
      <div class="col-2">
        <p>Connected</p>
        <p>IP Address:<br />541.541.5431.23</p>
      </div>
      <div class="col-2">
        <p>Searching for file<br />[H31A.exe]....</p>
        <p>Running<br />[H31A.exe]</p>
      </div>
      <div class="col-2">
        <p>Error</p>
        <p>Program Terminated</p>
      </div>
    </div>
