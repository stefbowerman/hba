{% comment %} Add a login form in case anyone *actually* needs to log in {% endcomment %}
<div id="password-login" class="password__login">
  {% form 'storefront_password' %}
    <div class="form-group">
      <input type="password" name="password" class="form-control" autocomplete="store-password">
    </div>
    <button type="submit" name="commit" class="btn">Submit</button>
  {% endform %}
</div>


<script type="text/javascript">
  if(window.location.search.indexOf('password') > -1) {
    document.getElementById('password-login').style.display = 'block';
  }
</script>

