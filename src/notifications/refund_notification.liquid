{% if refund_line_items.size == item_count %}
  {% capture email_title %}Your order has been refunded{% endcapture %}
{% elsif refund_line_items.size == 0 %}
  {% capture email_title %}You have received a refund{% endcapture %}
{% else %}
  {% capture email_title %}Some items in your order have been refunded{% endcapture %}
{% endif %}
{% capture email_body %}Total amount refunded: <strong>{{ amount | money }}</strong>{% endcapture %}

<!DOCTYPE html>
<html lang="en">
  <head>
  <title>{{ email_title }}</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width">
  <link rel="stylesheet" type="text/css" href="/assets/notifications/styles.css">
  <style>
@font-face{font-family:HBA Mono;src:url(//cdn.shopify.com/s/files/1/0276/2168/7409/files/hbamono-regular.woff?v=1594683590) format("woff"),url(//cdn.shopify.com/s/files/1/0276/2168/7409/files/hbamono-regular.woff2?v=1594683590) format("woff2");font-weight:400;font-style:normal}@font-face{font-family:HBA Mono;src:url(//cdn.shopify.com/s/files/1/0276/2168/7409/files/hbamono-bold.woff?v=1594683590) format("woff"),url(//cdn.shopify.com/s/files/1/0276/2168/7409/files/hbamono-bold.woff2?v=1594683590) format("woff2");font-weight:700;font-style:normal}.body,body{background-color:#000;color:#fff;text-rendering:optimizeLegibility;-webkit-font-smoothing:antialiased}.body,.button__cell,.container p,.content__cell strong,.customer-info__item-content span,.customer-info__item-content strong,.disclaimer__subtext,.order-list__item-price,.order-list__item-quantity,.order-list__item-refunded,.order-list__item-sku,.order-list__item-title,.order-list__item-variant,.order-list__price-cell,.order-list__product-description-cell,.order-number__cell,.order-number__text,.return-label__instruction-step,.subtotal-line__title span,.subtotal-line__value,.subtotal-line__value strong{font-size:13px;line-height:1.23;font-weight:400;color:#fff;font-family:HBA Mono,Monaco,Courier,monospace}.order-list__item-title,h1,h2,h3,h4,h5,h6{font-family:Helvetica,-apple-system,BlinkMacSystemFont,sans-serif;line-height:1.2;font-weight:700;text-transform:uppercase;color:#fff}h1,h2,h3,h4{font-size:12px}h5{font-size:11px}h6{font-size:10px}.content__cell p{font-size:12px}.content__cell,.section__cell{padding:15px 0}.button__cell{text-align:left}.button__text{display:inline-block;font-size:12px;text-transform:uppercase;padding:0}.button__text:hover{background-color:#fff!important;color:#000!important}.order-list__product-image{border-radius:0;border:none;margin-right:18px;width:180px;height:auto}@media (min-width:600px){.order-list__product-image{width:230px!important}}.order-list__product-description-cell{vertical-a