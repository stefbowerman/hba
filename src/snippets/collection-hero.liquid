{%- comment %}

  Collection Hero
  ------------------------------------------------------------------------------

  Usage:

  {% render 'collection-hero',
             primary_image: { image } - optional
             primary_video_file_url: { string } - optional
             secondary_image: { image } - optional,
             secondary_video_file_url: { string } - optional
             footer_primary_text: { string } - optional
             footer_secondary_text: { string } - optional
  %}

{% endcomment -%}

<div class="collection-hero">
  <div class="collection-hero__body">
    <div class="row">
      <div class="col-md-4 offset-md-1">
        <div class="collection-hero__body-media">
          <div class="collection-hero__body-media-content collection-hero__body-media-content--primary">
            {% if primary_image %}
              <img src="{{ primary_image | img_url: '800x' }}" />
            {% endif %}
            {% if primary_video_file_url %}
              {% render 'ambient-video', url: primary_video_file_url %}
            {% endif %}
          </div>
        </div>
      </div>
      <div class="col-md-5 offset-md-1">
        <div class="collection-hero__body-media">
          <div class="collection-hero__body-media-content collection-hero__body-media-content--secondary">                  
            {% if secondary_image %}
              <img src="{{ secondary_image | img_url: '1200x' }}" />
            {% endif %}
            {% if secondary_video_file_url %}
              {% render 'ambient-video', url: secondary_video_file_url %}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="collection-hero__footer">
    <span>{{ footer_primary_text }}</span>
    <span>{{ footer_secondary_text }}</span>
  </div>            
</div>
